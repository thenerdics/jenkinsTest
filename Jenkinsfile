#!/usr/bin/env groovy

pipeline {
    agent none 
    stages {
        stage('Example Build') {
            job('example-job-from-job-dsl') {
                scm {
                    github('jenkinsci/job-dsl-plugin', 'master')
                }
                triggers {
                    cron("@hourly")
                }
                steps {
                    shell("echo 'Hello World'")
                }
            }
        }
        stage('Example Test') {
            agent { docker 'openjdk:8-jre' } 
            steps {
                echo 'Hello, JDK'
                sh 'java -version'
            }
        }
    }
}


